<%- include('partials/header') %>

<div class="container editkacss py-5">
  <h1>Edit Shayari</h1>

  <form action="/shayaris/<%= index %>/edit" method="POST" class="mt-3">
    <div class="mb-3">
      <label class="form-label">Your Good Name</label>
      <input
        type="text"
        class="form-control inputq"
        name="author"
        value="<%= shayari.name %>"
      >
    </div>

    <div class="mb-3">
      <label class="form-label wulu">Shayari you want to publish</label>
      <textarea
        class="form-control inputq"
        name="content"
        rows="3"
      ><%= shayari.text %></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/shayaris" class="btn btn-secondary ms-2">Cancel</a>
  </form>
</div>

<%- include('partials/footer') %>
